<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Costea_Maria_ClaudiaBakery.AboutClaudia"
             Title="AboutClaudia">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Margin="10">
            <HorizontalStackLayout Spacing="10">
                <Image Source="logo.png" SemanticProperties.Description="About us" HeightRequest="64" />
                <Label FontSize="22" FontAttributes="Bold" Text="Product List" VerticalOptions="End" />
            </HorizontalStackLayout>
            <Label Text="This app will help you to find the best and fresh products" />
            <Label FontSize="22" Text="Cele mai vandute produse de luna acesta:" VerticalOptions="Center" />
            <Image Source="briose.png" SemanticProperties.Description="Briose" HeightRequest="250"/>
            <Image Source="cocos.png" SemanticProperties.Description="Cocos" HeightRequest="250"/>
            <Image Source="tarta.png" SemanticProperties.Description="Tarta" HeightRequest="250"/>
            <Image Source="cornulete.png" SemanticProperties.Description="Cornulete" HeightRequest="250"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>